# map caps lock to control

if [ ${OS} == 'linux' ]
then
   setxkbmap -option ctrl:nocaps
   setxkbmap -option compose:ralt
fi

# prevent cursor skipping around due to incidental trackpad movement
# as per: https://askubuntu.com/questions/115349/why-does-my-cursor-jump-when-typing

syndaemon -i 3 -d -t -k
