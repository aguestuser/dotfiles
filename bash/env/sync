# src & dst
local="~/-"
remote="serioustown:~/-"

# files to exclude

# `-a`: syncs recursively, preserves symlinks, special/device files, mod times, group, owner, & permissions.
# `-z`: performs compression
# `-P`: combines `--progress` (progress bar) and `--partial` (allows resuming interrupted transfers)
# `-n`: performs a dry-run
# `-v`: verbose

alias sync-push="time rsync -azP ${local}/ ${remote}"
alias sync-push-preview="time rsync -anv  ${local}/ ${remote}"
alias sync-push-delete="time rsync -azP --delete ${local}/ ${remote}"
alias sync-push-delete-preview="time rsync -anv --delet ${local}/ ${remote}"

alias sync-pull="time rsync -azP   ${remote}/ ${local}"
alias sync-pull-preview="time rsync -anv   ${remote}/ ${local}"
alias sync-pull-delete="time rsync -azP --delete   ${remote}/ ${local}"
alias sync-pull-delete-preview="time rsync -anv --delete   ${remote}/ ${local}"
