# load nvm & nvm bash completion
export NVM_DIR="${HOME}/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# put webstorm on PATH
export PATH=$PATH:/opt/WebStorm-181.5087.27/bin

# put yarn global bin on PATH
export PATH=$PATH:${HOME}/.yarn/bin

alias nut="npm run unitTest"
alias nutw="npm run unitTestWatch"
alias nuit="npm run unitAndIntegrationTest"
alias nuitw="npm run unitAndIntegrationTestWatch"
alias nft="npm run functionalTest"
alias nftw="npm run functionalTestWatch"
alias nt="npm run test"
alias ntw="npm run testWatch"
alias npg="npm run pregit"
